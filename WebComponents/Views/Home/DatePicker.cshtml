<h2>DatePicker</h2>

<designsystem-datepicker id="ds-datepicker"></designsystem-datepicker>
<button id="changerDate">Changer date</button>
<button id="effacerDate">Effacer date</button>

<hr />

<div id="contenu"></div>

<script type="text/template" id="template">
    @*On met le .md dans un template*@
    @Html.Raw(HttpUtility.HtmlDecode(File.ReadAllText(Server.MapPath("~/docs/designsystem-datepicker.md"))))
</script>

<script>
    /*on utilise le plugin pour convertir le md en html*/
    var md = window.markdownit();
    var template = $('#template').html();
    var result = md.render(template);
    $("#contenu").html(result);

    $('#contenu').find("table").each(function () {
        $(this).addClass("table table-striped");
    });

    $(document).ready(function () {
        $("#changerDate").on("click", function () {
            var monDatePicker = document.querySelector("designsystem-datepicker#ds-datepicker");

            var element = monDatePicker.element();

            element.value(new Date());
            element.ds.fonction1();
        });

        $("#effacerDate").on("click", function () {
            var monDatePicker = document.querySelector("designsystem-datepicker#ds-datepicker");

            var element = monDatePicker.element();

            element.value(null);
            element.ds.fonction2();
        })

    });
</script>